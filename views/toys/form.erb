<form action="/<%= @toy.id %>" method="POST">
  <div>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @toy.title %>">
  </div>
  <div>
      <input type="text" name='img_url' placeholder="Add url of image" value= "<%= @toy.img_url %>">
  </div>
  <div>
    <textarea name="toy_body" placeholder="The body of the text"><%= @toy.toy_body%></textarea>
  </div>
  <div>
    <input type="submit" value="Save">
  </div>
  <% if(@toy.id) %>
  <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
